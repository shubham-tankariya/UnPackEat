<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analysis - <%= productData.product?.name || 'Product' %>
    </title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="/css/analysis.css">
</head>

<body>
    <!-- DATA BRIDGE -->
    <script id="product-data" type="application/json">
        <%- JSON.stringify(productData) %>
    </script>

    <header>
        <%- include('layouts/navbar') %>
    </header>

    <div class="analysis-container">
        <!-- Block 1: Hero Identity -->
        <div class="glass-card block-hero">
            <div class="hero-header">
                <div class="w-100">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h1 class="h3 m-0 fw-bold">
                            <%= productData.product?.name || 'Product Name' %>
                        </h1>
                        <div class="gauge-wrapper">
                            <svg class="segmented-gauge" viewBox="0 0 100 100">
                                <defs>
                                    <mask id="gauge-mask">
                                        <circle cx="50" cy="50" r="42" fill="none" stroke="white" stroke-width="12"
                                            stroke-dasharray="2 1.5"></circle>
                                    </mask>
                                </defs>
                                <circle class="gauge-track" cx="50" cy="50" r="42" mask="url(#gauge-mask)"></circle>
                                <circle id="gauge-progress" class="gauge-segment-fill" cx="50" cy="50" r="42"
                                    mask="url(#gauge-mask)"
                                    data-score="<%= productData.highlights?.health_score || 0 %>"></circle>
                            </svg>
                            <div class="gauge-center" id="gauge-center-bg"
                                style="background-color: <%= (productData.highlights?.health_score || 0) > 60 ? '#28a745' : ((productData.highlights?.health_score || 0) > 40 ? '#ffc107' : '#dc3545') %>">
                                <span class="score-number">
                                    <%= productData.highlights?.health_score || 0 %>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-3 mb-3">
                        <img src="<%= productData.product?.image || '/images/placeholder.png' %>" alt="Product"
                            class="product-img shadow-sm" onerror="this.src='/images/placeholder.png'">
                        <div>
                            <p class="mb-1 text-muted">by <%= productData.product?.brand || 'Brand' %>
                            </p>
                            <div id="verdict-badge" class="verdict-tag"
                                style="background-color: <%= (productData.highlights?.health_score || 0) > 60 ? '#28a745' : ((productData.highlights?.health_score || 0) > 40 ? '#ffc107' : '#dc3545') %>">
                                <%= productData.highlights?.verdict || 'Verdict' %>
                            </div>
                        </div>
                    </div>

                    <!-- Mini Summary Tiles -->
                    <div class="summary-tiles">
                        <div class="summary-tile">
                            <span>Additives</span>
                            <strong
                                class="<%= (productData.additives_full?.length || 0) > 5 ? 'text-danger' : 'text-success' %>">
                                <%= productData.additives_full?.length || 0 %>
                            </strong>
                        </div>
                        <div class="summary-tile">
                            <span>Processing</span>
                            <strong
                                class="<%= (productData.highlights?.nova_group || 0) >= 3 ? 'text-danger' : 'text-success' %>">
                                NOVA <%= productData.highlights?.nova_group || 'N/A' %>
                            </strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Block 2: Nutrition Breakdown -->
        <div class="glass-card block-nutrition">
            <h2 class="section-title">Nutrient Levels <i class="fa-solid fa-circle-info ms-1 opacity-50 small"
                    title="Calculated per 100g"></i></h2>
            <div id="macros-container">
                <% (productData.nutrients || []).slice(0, 6).forEach((nutri, index)=> { %>
                    <div class="nutrition-item mb-3">
                        <div class="d-flex justify-content-between small fw-bold">
                            <span class="text-capitalize">
                                <%= nutri.name.replace('_', ' ' ) %>
                            </span>
                            <span>
                                <%= nutri.amount_100g %>
                                    <%= nutri.unit %>
                            </span>
                        </div>
                        <div class="progress-container">
                            <div class="progress-bar-custom"
                                style="width: 0%; --target-width: <%= Math.min(nutri.rda_percent || 0, 100) %>%; background-color: <%= nutri.rating === 'green' ? '#28a745' : (nutri.rating === 'amber' ? '#ffc107' : '#dc3545') %>"
                                data-delay="<%= index * 100 %>">
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <div class="mt-4">
                <h2 class="section-title">Impact Insights <i class="fa-solid fa-circle-info ms-1 opacity-50 small"
                        title="Key dietary indicators"></i></h2>
                <div class="badge-list">
                    <% if (productData.metadata?.nutrient_levels) { %>
                        <% Object.entries(productData.metadata.nutrient_levels).forEach(([key, level])=> { %>
                            <span
                                class="badge-custom <%= level === 'low' ? 'flag-green' : (level === 'moderate' ? 'flag-amber' : 'flag-red') %>">
                                <%= level.charAt(0).toUpperCase() + level.slice(1) %>
                                    <%= key.replace('-', ' ' ) %>
                            </span>
                            <% }) %>
                                <% } %>
                                    <% if (productData.highlights?.likes?.length) { %>
                                        <% productData.highlights.likes.forEach(like=> { %>
                                            <span class="badge-custom flag-green">
                                                <%= like %>
                                            </span>
                                            <% }) %>
                                                <% } %>
                                                    <% if (productData.highlights?.concerns?.length) { %>
                                                        <% productData.highlights.concerns.forEach(concern=> { %>
                                                            <span class="badge-custom flag-red">
                                                                <%= concern %>
                                                            </span>
                                                            <% }) %>
                                                                <% } %>
                </div>
            </div>
        </div>

        <!-- Block 3: Safety & Processing (New Enhanced Tile) -->
        <div class="glass-card block-highlights">
            <h2 class="section-title">Safety & Formulation <i class="fa-solid fa-circle-info ms-1 opacity-50 small"
                    title="Detailed safety analysis"></i></h2>

            <div class="mb-3">
                <span class="text-muted d-block small mb-1">Ingredient Complexity</span>
                <div class="d-flex align-items-center gap-2">
                    <strong class="h5 mb-0">
                        <%= productData.ingredients?.complexity || 'Moderate' %>
                    </strong>
                    <span class="badge rounded-pill bg-light text-dark border">
                        <%= productData.ingredients?.ingredients?.length || 0 %> items
                    </span>
                </div>
            </div>

            <div class="mb-3">
                <span class="text-muted d-block small mb-1">Formulation Analysis</span>
                <div class="badge-list">
                    <% if (productData.ingredients?.contains_palm_oil) { %>
                        <span class="badge-custom flag-red"><i class="fa-solid fa-droplet"></i> Palm Oil</span>
                        <% } %>
                            <% if (productData.additives_full?.some(a=> a.risk === 'high')) { %>
                                <span class="badge-custom flag-red"><i class="fa-solid fa-triangle-exclamation"></i>
                                    High Risk Additives</span>
                                <% } else if (productData.additives_full?.some(a=> a.risk === 'moderate')) { %>
                                    <span class="badge-custom flag-amber"><i class="fa-solid fa-circle-exclamation"></i>
                                        Moderate Risk Additives</span>
                                    <% } else { %>
                                        <span class="badge-custom flag-green"><i class="fa-solid fa-check-circle"></i>
                                            Safe Additives</span>
                                        <% } %>
                </div>
            </div>

            <div class="mb-1">
                <span class="text-muted d-block small mb-1">Processing Method</span>
                <div
                    class="p-2 rounded-3 <%= (productData.highlights?.nova_group || 0) >= 3 ? 'bg-danger-subtle' : 'bg-success-subtle' %>">
                    <p class="mb-0 small fw-bold">
                        <%= (productData.highlights?.nova_group || 0)>= 3 ? `Ultra-Processed: Contains many industrial
                            ingredients.` : `Minimal Processing: Retains most natural nutrients.` %>
                    </p>
                </div>
            </div>
        </div>

        <!-- Block 4: Environment & Ethics (New Enhanced Tile) -->
        <div class="glass-card block-table">
            <h2 class="section-title">Environment & Ethics <i class="fa-solid fa-circle-info ms-1 opacity-50 small"
                    title="Sustainability and production"></i></h2>
            <div class="row g-2">
                <div class="col-6">
                    <div class="summary-tile bg-light">
                        <span>Eco-Score</span>
                        <strong class="text-uppercase">
                            <%= productData.environment?.ecoscore || 'N/A' %>
                        </strong>
                    </div>
                </div>
                <div class="col-6">
                    <div class="summary-tile bg-light">
                        <span>Packaging</span>
                        <strong class="small text-capitalize">
                            <%= productData.environment?.packaging?.[0]?.replace('en:', '' ) || 'N/A' %>
                        </strong>
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <div class="badge-list">
                    <% if (productData.metadata?.labels?.includes('en:vegetarian')) { %>
                        <span class="badge-custom flag-green"><i class="fa-solid fa-leaf"></i> Vegetarian</span>
                        <% } %>
                            <% if (productData.metadata?.labels?.includes('en:vegan')) { %>
                                <span class="badge-custom flag-green"><i class="fa-solid fa-seedling"></i> Vegan</span>
                                <% } %>
                                    <% if (productData.allergens?.length) { %>
                                        <span class="badge-custom flag-red"><i class="fa-solid fa-warning"></i>
                                            <%= productData.allergens.length %> Allergens
                                        </span>
                                        <% } %>
                </div>
            </div>
        </div>

        <!-- Block 5: More Details -->
        <div class="glass-card block-details">
            <h2 class="section-title">Core Data <i class="fa-solid fa-circle-info ms-1 opacity-50 small"
                    title="Detailed ingredient list"></i></h2>
            <div class="accordion accordion-flush accordion-custom" id="detailsAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseIng">
                            Ingredients Breakdown
                        </button>
                    </h2>
                    <div id="collapseIng" class="accordion-collapse collapse" data-bs-parent="#detailsAccordion">
                        <div class="accordion-body px-0 small text-muted">
                            <%= productData.ingredients?.text || 'N/A' %>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#collapseAdd">
                            Additive Details (<%= productData.additives_full?.length || 0 %>)
                        </button>
                    </h2>
                    <div id="collapseAdd" class="accordion-collapse collapse" data-bs-parent="#detailsAccordion">
                        <div class="accordion-body px-0 small text-muted">
                            <% if (productData.additives_full?.length) { %>
                                <ul class="list-unstyled mb-0">
                                    <% productData.additives_full.forEach(add=> { %>
                                        <li class="mb-2">
                                            <div class="d-flex align-items-center gap-1">
                                                <strong class="text-dark">
                                                    <%= add.code %>
                                                </strong>
                                                <span
                                                    class="badge bg-<%= add.risk === 'low' ? 'success' : (add.risk === 'moderate' ? 'warning' : 'danger') %>"
                                                    style="font-size: 0.6rem">
                                                    <%= add.risk %>
                                                </span>
                                            </div>
                                            <%= add.explanation %>
                                        </li>
                                        <% }) %>
                                </ul>
                                <% } else { %>
                                    No additives detected.
                                    <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Block 6: AI-POWERED INSIGHTS -->
        <!-- Block 6: AI-POWERED INSIGHTS -->
        <% if (productData.ai_insights && productData.ai_insights.summary) { %>
            <div class="glass-card block-ai-insights" data-aos="fade-up">
                <div class="ai-header">
                    <div class="ai-header-icon">
                        <i class="fa-solid fa-robot"></i>
                    </div>
                    <div>
                        <h2 class="ai-header-title">AI-Powered Insights</h2>
                        <p class="ai-header-subtitle">Intelligent nutritional analysis & recommendations</p>
                    </div>
                    <i class="fa-solid fa-sparkles ai-sparkle"></i>
                </div>

                <div class="ai-summary-card">
                    <i class="fa-solid fa-quote-left ai-quote-icon"></i>
                    <p class="ai-summary-text">
                        <%= productData.ai_insights.summary %>
                    </p>
                </div>

                <% if (productData.ai_insights.detailed_analysis) { %>
                    <div class="ai-detailed-analysis mb-4 px-3">
                        <p class="text-muted small">
                            <%= productData.ai_insights.detailed_analysis %>
                        </p>
                    </div>
                    <% } %>

                        <div class="ai-grid">
                            <div class="ai-column">
                                <div class="ai-column-header ai-column-header-green">
                                    <i class="fa-solid fa-circle-check"></i> Key Benefits
                                </div>
                                <ul class="ai-list">
                                    <% let benefits=productData.ai_insights.key_benefits ||
                                        productData.ai_insights.likes || []; if (benefits && benefits.length> 0) {
                                        benefits.forEach(benefit => { %>
                                        <li class="ai-list-item">
                                            <div class="ai-list-icon ai-list-icon-green"><i
                                                    class="fa-solid fa-plus"></i></div>
                                            <%= benefit %>
                                        </li>
                                        <% }) } else { %>
                                            <p class="ai-empty-text">No significant benefits identified.</p>
                                            <% } %>
                                </ul>
                            </div>

                            <div class="ai-column">
                                <div class="ai-column-header ai-column-header-red">
                                    <i class="fa-solid fa-circle-exclamation"></i> Health Concerns
                                </div>
                                <ul class="ai-list">
                                    <% let concerns=productData.ai_insights.key_concerns ||
                                        productData.ai_insights.concerns || []; if (concerns && concerns.length> 0) {
                                        concerns.forEach(concern => { %>
                                        <li class="ai-list-item">
                                            <div class="ai-list-icon ai-list-icon-red"><i class="fa-solid fa-minus"></i>
                                            </div>
                                            <%= concern %>
                                        </li>
                                        <% }) } else { %>
                                            <p class="ai-empty-text">No major concerns found.</p>
                                            <% } %>
                                </ul>
                            </div>
                        </div>

                        <% if (productData.ai_insights.consumption_advice || productData.ai_insights.ideal_consumption)
                            { %>
                            <div class="ai-advice-card">
                                <div class="ai-advice-icon">
                                    <i class="fa-solid fa-lightbulb"></i>
                                </div>
                                <div>
                                    <span class="ai-advice-label">Consumption Advice</span>
                                    <p class="ai-advice-text">
                                        <%= productData.ai_insights.consumption_advice ||
                                            productData.ai_insights.ideal_consumption %>
                                    </p>
                                </div>
                            </div>
                            <% } %>

                                <% let alts=productData.ai_insights.alternative_suggestions ||
                                    productData.ai_insights.better_alternatives || []; if (alts && (Array.isArray(alts)
                                    ? alts.length> 0 : alts)) {
                                    %>
                                    <div class="ai-alternatives">
                                        <span class="ai-alternatives-label"><i class="fa-solid fa-star me-1"></i>
                                            Smarter Alternatives</span>
                                        <div class="ai-alternatives-list">
                                            <% if (Array.isArray(alts)) { %>
                                                <% alts.forEach(alt=> { %>
                                                    <div class="ai-alt-chip">
                                                        <i class="fa-solid fa-check"></i>
                                                        <%= alt %>
                                                    </div>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <p class="ai-advice-text ms-2 mt-2">
                                                                <%= alts %>
                                                            </p>
                                                            <% } %>
                                        </div>
                                    </div>
                                    <% } %>
            </div>
            <% } %>
    </div>

    <%- include('layouts/footer') %>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/analysis.js"></script>
</body>

</html>
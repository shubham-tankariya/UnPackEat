<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Detail | UnPackEat</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/user_detail_style.css">
</head>

<body>
    <header>
        <%- include('layouts/navbar') %>
    </header>

    <div class="dashboard-wrapper">
        <main class="main-content">
            <!-- Hero Header -->
            <section class="welcome-header" data-aos="zoom-in" data-aos-duration="800">
                <div class="header-text">
                    <h1>Hi, <%= currentUser.userInfo.firstName %>! ðŸ‘‹</h1>
                    <p>Manage your account details and health preferences.</p>
                </div>
                <div class="header-image d-none d-lg-block">
                    <i class="fa-solid fa-user-gear" style="font-size: 8rem; opacity: 0.2;"></i>
                </div>
            </section>

            <!-- Profile Details Section -->
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="profile-form" data-aos="fade-up">
                        <h4 class="fw-bold mb-4 text-primary">Your Information</h4>
                        <form action="/user_detail/update" method="POST">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">First Name</label>
                                    <input type="text" name="firstName" class="form-control"
                                        value="<%= currentUser.userInfo.firstName %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" name="lastName" class="form-control"
                                        value="<%= currentUser.userInfo.lastName || '' %>">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Mobile Number</label>
                                <input type="text" class="form-control" value="<%= currentUser.mobileNo %>" disabled>
                                <small class="text-muted">Mobile number is linked to your account and cannot be
                                    changed.</small>
                            </div>

                            <h4 class="fw-bold mt-5 mb-4 text-primary">Health Preferences</h4>
                            <div class="mb-4">
                                <label class="form-label">Food-Related Concerns / Diseases</label>
                                <select name="conditions" class="form-select" multiple size="10">
                                    <% const diseases=[ 'Diabetes' , 'Hypertension' , 'Celiac Disease'
                                        , 'Lactose Intolerance' , 'Chronic Kidney Disease' , 'PCOS / PCOD' , 'Obesity'
                                        , 'Hyperthyroidism' , 'Hypothyroidism' , 'Gout'
                                        , 'Irritable Bowel Syndrome (IBS)' , 'Peanut Allergy' , 'Gluten Sensitivity'
                                        , 'High Cholesterol' , 'Iron Deficiency (Anemia)' ]; const
                                        userConditions=currentUser.user_health_profile.conditions || [];
                                        diseases.forEach(disease=> { %>
                                        <option value="<%= disease %>" <%=userConditions.includes(disease) ? 'selected'
                                            : '' %>><%= disease %>
                                        </option>
                                        <% }); %>
                                </select>
                                <small class="text-muted">Hold Ctrl (Windows) or Cmd (Mac) to select multiple
                                    options.</small>
                            </div>

                            <button type="submit" class="btn-primary-capsule border-0">
                                <i class="fa-solid fa-check-circle"></i> Update User Details
                            </button>
                        </form>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="activity-card mb-4" data-aos="fade-left">
                        <h5 class="fw-bold text-primary mb-3">Quick Summary</h5>
                        <div class="d-flex align-items-center mb-3">
                            <div class="card-icon bg-success bg-opacity-10 text-success me-3"
                                style="width: 45px; height: 45px; margin: 0; font-size: 1.1rem;">
                                <i class="fa-solid fa-clipboard-list"></i>
                            </div>
                            <div>
                                <div class="fw-bold">Total Scans</div>
                                <div class="text-muted">
                                    <%= currentUser.scanning_History.length %> products analyzed
                                </div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="card-icon bg-info bg-opacity-10 text-info me-3"
                                style="width: 45px; height: 45px; margin: 0; font-size: 1.1rem;">
                                <i class="fa-solid fa-virus-shield"></i>
                            </div>
                            <div>
                                <div class="fw-bold">Monitored Conditions</div>
                                <div class="text-muted">
                                    <%= userConditions.length %> preferences set
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="activity-card" data-aos="fade-left" data-aos-delay="100">
                        <h5 class="fw-bold text-primary mb-3">Navigation</h5>
                        <div class="list-group list-group-flush border-0">
                            <a href="/history"
                                class="list-group-item list-group-item-action border-0 px-0 d-flex align-items-center">
                                <i class="fa-solid fa-history me-3 text-muted"></i> View Scan History
                            </a>
                            <a href="/home"
                                class="list-group-item list-group-item-action border-0 px-0 d-flex align-items-center">
                                <i class="fa-solid fa-search me-3 text-muted"></i> Analyze New Product
                            </a>
                            <a href="/logout"
                                class="list-group-item list-group-item-action border-0 px-0 d-flex align-items-center text-danger">
                                <i class="fa-solid fa-sign-out-alt me-3"></i> Sign Out
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <%- include('layouts/footer') %>

        <!-- Scripts -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
        <script>
            AOS.init({
                duration: 800,
                once: true,
                easing: 'ease-out-quad'
            });
        </script>
</body>

</html>